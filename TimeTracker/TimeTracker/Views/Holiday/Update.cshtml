@model TimeTracker.Models.Holiday.HolidayViewModel
@{
    ViewData["Title"] = "Update User";
}

@section ContentHeader{
    <div class="col-sm-6">
        <h4 class="m-0">Update Holiday</h4>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Holiday</a></li>
            <li class="breadcrumb-item active">Update</li>
        </ol>
    </div>
}

    <div class="row">
        <div class="col-md-12">
            <div class="card card-lightblue card-outline">
                <div class="card-header">
                    <h3 class="card-title font-color">
                        <i class="fa-solid fa-calendar-days"></i>
                        Update Holiday
                    </h3>
                </div>
                <form asp-action="Update">
                    <input asp-for="Id" type="hidden" />
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" type="text" class="form-control form-control-sm" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Date">Date</label>
                                <input asp-for="Date" type="date" class="form-control form-control-sm" placeholder="Date">
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" class="btn btn-info theme-color" value="Update" />
                        <button type="reset" class="btn btn-secondary ml-1">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    @section Scripts{
    <script>
        $(document).ready(function () {
            SelectedMenu('menuMaster', 'menuHolidayList');
        });
    </script>
}