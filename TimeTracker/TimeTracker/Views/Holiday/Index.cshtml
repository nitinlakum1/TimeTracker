@using TimeTracker.Helper
@using TimeTracker_Model
@model List<TimeTracker_Model.Holiday.HolidayModel>

@{
    ViewData["Title"] = "Holiday";
    int roleId = 0;
    if (User != null)
    {
        roleId = User.GetLoginRole();
    }
}

@section ContentHeader{
<div class="col-sm-6">
    <h4 class="m-0">Holiday</h4>
</div>
<div class="col-sm-6">
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Holiday</li>
    </ol>
</div>
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-lightblue card-outline">
            <div class="card-header">
                <h3 class="card-title font-color">
                    <i class="fa-solid fa-calendar-days"></i>
                    Holiday
                </h3>
                <div style="float:right; display:flex;">
                    <div style="float:right; margin-left:5px;">
                        <select class="form-control form-control-sm" asp-items="ViewBag.Users" id="cmbYears">
                            @for (int i = 2022; i <= 2025; i++)
                            {
                                if (i == DateTime.Now.Year)
                                {
                                    <option selected value="@i">@i</option>
                                }
                                else
                                {
                                    <option value="@i">@i</option>
                                }
                            }
                        </select>
                    </div>
                    @if (roleId == (int)Roles.Admin)
                    {
                        <div style="float:right;margin-left:5px;">
                            <a asp-action="Create" class="btn btn-block btn-info btn-sm theme-color">Create</a>
                        </div>
                    }
                </div>
            </div>
            <div class="card-body" style="padding-top: 3px;">
                <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12" style="text-align: right;">
                            <span class="holiday-note">
                                *Optional Holiday <strong>'Bakrid / Eid al Adha'</strong> or <strong>'Janmashtami'</strong>
                            </span>
                        </div>
                        <div class="col-sm-12">
                            <table class="table table-sm table-bordered table-striped" id="tblHoliday">
                                <thead>
                                    <tr>
                                        <th>Holiday</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="comformdelete">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure to delete</h5>
                <p id="deleteId"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Close()">Close</button>
                <button type="button" class="btn btn-danger" onclick="conformDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>

<p hidden id="roleId">@roleId</p>

@section Scripts{
<script src="~/js/Holiday.js"></script>

<script>
    $(document).ready(function () {
        SelectedMenu('menuMaster', 'menuHolidayList');
        bindDataTable();
    });
</script>
}
