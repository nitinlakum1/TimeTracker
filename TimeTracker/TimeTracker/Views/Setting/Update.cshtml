@model TimeTracker.Models.Setting.EditSettingViewModel
@{
    ViewData["Title"] = "Update Setting";
}

@section ContentHeader{
    <div class="col-sm-6">
        <h4 class="m-0">Update Setting</h4>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Settings</a></li>
            <li class="breadcrumb-item active">Update</li>
        </ol>
    </div>
}

    <div class="row">
        <div class="col-md-12">
            <div class="card card-lightblue card-outline">
                <div class="card-header">
                    <h3 class="card-title font-color">
                        <i class="fas fa-user-plus"></i>
                        Update Setting
                    </h3>
                </div>
                <form asp-action="Update">
                    <input asp-for="Id" type="hidden" />
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="DisplayName">DisplayName</label>
                                <input asp-for="DisplayName" type="text" class="form-control form-control-sm" placeholder="DisplayName" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Key">Key</label>
                                <input asp-for="Key" type="text" class="form-control form-control-sm" placeholder="Key" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Value">Value</label>
                                <input asp-for="Value" type="text" class="form-control form-control-sm" placeholder="Value">
                                <span asp-validation-for="Value" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="IsActive">IsActive</label>
                                <select asp-for="IsActive" class="form-control form-control-sm">
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" class="btn btn-info theme-color" value="Update" />
                        <button type="reset" class="btn btn-secondary ml-1">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts{
    <script>
        $(document).ready(function () {
            SelectedMenu('menuMaster', 'menuSettings');
        });
    </script>
}