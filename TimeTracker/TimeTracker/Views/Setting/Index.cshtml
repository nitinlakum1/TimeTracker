@model List<TimeTracker_Model.Setting.SettingModel>

@{
    ViewData["Title"] = "Settings";
}

@section ContentHeader{
    <div class="col-sm-6">
        <h4 class="m-0">Settings</h4>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Settings</li>
        </ol>
    </div>
}

    <div class="row">
        <div class="col-md-12">
            <div class="card card-lightblue card-outline">
                <div class="card-header">
                    <h4 class="card-title font-color">
                        <i class="fa-solid fa-gear" style="font-size: 16px !important;"></i>
                        Settings
                    </h4>
                </div>
                <div class="card-body">
                    <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-sm table-bordered table-striped" id="tblUsers">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Key</th>
                                            <th>Value</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="comformdelete">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure to delete</h5>
                    <p hidden id="deleteId"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Close()">Close</button>
                    <button type="button" class="btn btn-danger" onclick="conformDelete()">Delete</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
    <script src="~/js/setting.js"></script>

    <script>
        $(document).ready(function () {
            SelectedMenu('menuMaster', 'menuSettings');
            bindDataTable();
        });
    </script>
}