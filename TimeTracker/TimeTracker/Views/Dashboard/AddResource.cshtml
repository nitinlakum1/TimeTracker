@model TimeTracker.Models.Setting.ResourceViewModel


@{
    ViewData["Title"] = "Create User";
}

@section ContentHeader{
    <div class="col-sm-6">
        <h4 class="m-0">Create User</h4>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Users</a></li>
            <li class="breadcrumb-item active">Create User</li>
        </ol>
    </div>
}

    <div class="row">
        <div class="col-md-12">
            <div class="card card-lightblue card-outline">
                <div class="card-header">
                    <h3 class="card-title font-color">
                        <i class="fa-solid fa-user-plus"></i>
                        Create User
                    </h3>
                </div>
                <form asp-action="AddResource">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label asp-for="Designation">Designation</label>
                                <input asp-for="Designation" type="text" class="form-control form-control-sm" placeholder="Designation">
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="education">education</label>
                                <input asp-for="education" type="text" class="form-control form-control-sm" placeholder="education">
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="experience">experience</label>
                                <input asp-for="experience" type="text" class="form-control form-control-sm" placeholder="experience">
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="salary">salary</label>
                                <input asp-for="salary" type="text" class="form-control form-control-sm" placeholder="salary">
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="minAge">minAge</label>
                                <input asp-for="minAge" type="text" class="form-control form-control-sm" placeholder="minAge">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" class="btn btn-info theme-color" value="Submit" />
                        <button type="reset" class="btn btn-secondary ml-1">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

}